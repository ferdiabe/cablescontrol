
services:
  controle-cabos-backend:
    build: ./backend
    container_name: controle-cabos-backend
    restart: unless-stopped
    environment:
      - FLASK_ENV=production
      - DATABASE_URL=sqlite:///app/database/controle_cabos.db
      - UPLOAD_FOLDER=/app/uploads
      - SECRET_KEY=controle-cabos-secret-key-2025
    volumes:
      - backend_data:/app/database
      - ./data/uploads:/app/uploads
      - ./data/logs:/app/logs
    networks:
      - iot-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5002/api/configuracao"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    deploy:
      resources:
        limits:
          memory: 400M
        reservations:
          memory: 200M

  controle-cabos-frontend:
    build: ./frontend
    container_name: controle-cabos-frontend
    restart: unless-stopped
    networks:
      - iot-network
    deploy:
      resources:
        limits:
          memory: 100M
        reservations:
          memory: 50M

  controle-cabos-mobile:
    build: ./mobile
    container_name: controle-cabos-mobile
    restart: unless-stopped
    networks:
      - iot-network
    deploy:
      resources:
        limits:
          memory: 100M
        reservations:
          memory: 50M

networks:
  iot-network:
    external: true

volumes:
  backend_data:
  uploads_data:
  logs_data:

volumes:
  backend_data:

volumes:
  backend_data:
